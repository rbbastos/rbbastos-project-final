<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<%=  debug session[:order_id] %>
<%=  debug session[:cust] %>

<% if !@order_item.nil? && @order_item.errors.any? %>
	<ul>
		<% @order_item.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<% if @line_items.size>0 %>
	<% @line_items.each do |item| %>
		<div class="well">
			<div class="row">
				<div class="col-sm-8">
					<h3><%= item.product.name %></h3>
				</div>
				<div class="col-sm-4">
					<div class="pull-right">
					<%= form_for @line_item, url: update_qty_path do |f| %>
						<%= f.hidden_field :product_id, value: item.product.id %>
						<%= f.hidden_field :update_cart, value: true %>
						<h5><%= number_to_currency (item.product.sellPrice) %></h5>
						<div class="form-group">
							<%= f.text_field :quantity, value: item.quantity.to_i, min: 1, class: 'form-control' %>
						</div>
						<div class="btn-group">
							<%= f.submit "Update Quantity", class: 'btn btn-primary' %>
							<%= link_to "Delete", item, method: :delete, remote: true, class: 'btn btn-danger'  %>
						</div>
						<span>Total Price: <%= number_to_currency (item.total_price) %></span>

					<% end %>
          <br>
          <br>
					</div>
				</div>
			</div>
		</div>
	<% end %>
	<%= link_to "Review Order", review_order_path, class:"button is-success" %>
<% else %>
	<p>No items in this cart.</p>
<% end %>
